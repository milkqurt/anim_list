<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="title"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/animeImageView"
            android:layout_width="360dp"
            android:layout_height="210dp"
            android:layout_below="@+id/titleImageView"
            android:layout_centerHorizontal="true"
            android:padding="4dp" />

        <TextView
            android:id="@+id/descriptionImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/animeImageView"
            android:layout_alignParentStart="@+id/animeImageView"
            android:text=""
            android:padding="4dp"
            android:textSize="15sp"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/fullDescriptionImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/animeImageView"
            android:layout_alignParentStart="@+id/animeImageView"
            android:text=""
            android:padding="4dp"
            android:textSize="15sp"
            android:textStyle="italic" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>